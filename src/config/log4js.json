{
  "appenders": {
    "access": {
      "type": "dateFile",
      "filename": "/logs/cto/http.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    }, 
     "stdout": {
      "type": "stdout",
      "layout": {
        "type": "pattern",
        "pattern": "%d{yyyy-MM-dd-hh:mm:ss:SSS} [%p] %m"
      }
    },
    "app": {
      "type": "dateFile",
      "filename": "/logs/cto/http.log",
      "pattern": "-yyyy-MM-dd-HH",
      "compress": true,
      "layout": {
        "type": "pattern",
        "pattern": "%d{yyyy-MM-dd-hh:mm:ss:SSS} [%p] %m"
      }
    },
    "error": {
      "type": "dateFile",
      "filename": "/logs/cto/http.log",
      "pattern": "-yyyy-MM-dd-HH",
      "compress": true,
      "layout": {
        "type": "pattern",
        "pattern": "%d{yyyy-MM-dd-hh:mm:ss:SSS} [%p] %m"
      }
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "app",
        "error",
        "stdout"
      ],
      "level": "DEBUG"
    },
    "http": {
      "appenders": [
        "access"
      ],
      "level": "DEBUG"
    }
  }
}